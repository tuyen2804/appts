<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.AdmissionInfo3Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Xét tuyển tài năng diện 1.3"
        android:textSize="20sp"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thư giới thiệu của thầy cô"
        android:layout_margin="12dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin thầy cô :"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Nam/nữ"
                android:textSize="16sp"
                android:id="@+id/edGenderTeacher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Họ tên thầy/cô"
                android:textSize="16sp"
                android:id="@+id/edNameTeacher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:textSize="16sp"
                android:id="@+id/edNumberPhone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="email"
                android:textSize="16sp"
                android:id="@+id/edEmailTeacher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tỉnh/Thành phố:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Tỉnh/thành phố"
                android:textSize="16sp"
                android:id="@+id/edCityTeacher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quận/huyện:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Quận/huyện"
                android:textSize="16sp"
                android:id="@+id/edDistricTeacher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trường thầy cô dạy:"
                android:textColor="@color/black"
                android:layout_margin="12dp"/>
            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Trường THPT"
                android:textSize="16sp"
                android:id="@+id/edSchoolTeacher"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải thư tự giới thiệu"
            android:background="@drawable/bg_btn2"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="12dp"
            android:id="@+id/btnAddLetter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư tự giới thiệu bản thân"
            android:layout_marginStart="12dp"
            android:id="@+id/txtLetter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyện vọng 1:"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Nguyện vọng 1"
                android:textSize="16sp"
                android:id="@+id/edPreference1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyện vọng 2:"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Nguyện vọng 2"
                android:textSize="16sp"
                android:id="@+id/edPreference2"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"
        android:id="@+id/btnNext"
        android:background="@color/red"/>

</LinearLayout>